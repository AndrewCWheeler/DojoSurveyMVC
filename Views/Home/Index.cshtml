@model Survey
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="my-5">Dojo Survey</h1>
    <form class="form-group m-2" asp-action="Submission" asp-controller="Home" method="POST">
        <div class="form-group row">
            <label for="Name" class="col-sm-2 col-form-label d-none d-sm-block">Name:</label>
            <div class="col col-sm-6">
                <input class="form-control form-control-lg" asp-for="Name" id="Name" placeholder="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="Dojo_Location" class="col-2 col-form-label d-none d-sm-block">Dojo Location:</label>
            <div class="col col-sm-6">
                <select asp-for="Dojo_Location" class="form-control form-control-lg" id="Dojo_Location">
                    <option disabled selected>Select Dojo Location</option>
                    <option value="Seattle">Seattle</option>
                    <option value="LA">LA</option>
                    <option value="Chicago">Chicago</option>
                </select>
                <span class="text-danger" asp-validation-for="Dojo_Location"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="Favorite_Language" class="col-2 col-form-label d-none d-sm-block">Favorite Language:</label>
            <div class="col col-sm-6">
                <select asp-for="Favorite_Language" class="form-control" id="Favorite_Language">
                    <option disabled selected>Select Favorite Language</option>
                    <option value="Python">Python</option>
                    <option value="C#">C#</option>
                    <option value="JavaScript">JavaScript</option>
                </select>
                <span class="text-danger" asp-validation-for="Favorite_Language"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="Comment" class="col-2 col-form-label d-none d-sm-block">Comment:</label>
            <div class="col col-sm-6">
                <textarea asp-for="Comment" class="form-control" id="Comment" rows="3" placeholder="Comment..."></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <button class="btn btn-primary float-right" type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>
